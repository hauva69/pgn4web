{
  "name": "Chess games viewer",

  "version": "1.4.6",

  "description": "Chess games viewer: interactive chessboard showing chess games from links to *.PGN URLs and from PGN text, using context menus and page actions.",

  "icons": {"16": "alpha-16.png", "48": "alpha/48/bp.png", "128": "alpha/128/bp.png"},

  "page_action": { "default_icon": "alpha-20.png", "default_title": "Chess games viewer: PGN links on this page", "default_popup": "popup.html" },

  "content_scripts" : [{"matches": ["*://*/*"], "js": ["pgnLinks.js"], "run_at": "document_idle", "all_frames": true}], 

  "permissions": ["contextMenus", "tabs", "*://*/"],

  "homepage_url": "http://pgn4web.casaschi.net",

  "incognito": "split",

  "minimum_chrome_version": "6.0",

  "update_url": "http://pgn4web.googlecode.com/svn/trunk/chrome-extension/updateInfo.xml",

  "background_page": "background.html"
}

