{
   "background_page": "background.html",
   "content_scripts": [ {
      "all_frames": true,
      "js": [ "pgnLinks.js" ],
      "matches": [ "*://*/*" ],
      "run_at": "document_idle"
   } ],
   "description": "Interactive chessboard showing chess games from links to PGN URLs, from local PGN files and from PGN text.",
   "file_browser_handlers": [ {
      "id": "view",
      "default_title": "View chess games",
      "file_filters": [ "filesystem:*.pgn", "filesystem:*.Pgn", "filesystem:*.PGN" ]
   }, {
      "id": "inspect",
      "default_title": "Inspect for chess games",
      "file_filters": [ "filesystem:*.zip", "filesystem:*.Zip", "filesystem:*.ZIP" ]
   } ],
   "help_page": "help.html",
   "homepage_url": "http://pgn4web.casaschi.net",
   "icons": {
      "128": "alpha/128/bp.png",
      "16": "alpha-16.png",
      "48": "alpha/48/bp.png"
   },
   "incognito": "split",
   "manifest_version": 2,
   "minimum_chrome_version": "14.0",
   "name": "Chess games viewer",
   "options_page": "options.html",
   "page_action": {
      "default_icon": "alpha-20.png",
      "default_popup": "popup.html",
      "default_title": "Chess games viewer: PGN links on this page"
   },
   "permissions": [ "contextMenus", "fileBrowserHandler", "tabs", "webRequest", "*://*/*" ],
   "update_url": "http://pgn4web.googlecode.com/svn/trunk/chrome-extension/updateInfo.xml",
   "version": "1.9.7"
}
