{
  "name": "Chess games viewer",

  "version": "1.0.8",

  "description": "Chess games viewer with interactive chessboard, showing PGN chess games URLs and PGN chess games text using context menus. From the pgn4web project at http://pgn4web.casaschi.net",

  "icons": {"16": "alpha-16-bp.png", "48": "alpha/48/bp.png", "128": "alpha/128/bp.png"},

  "permissions": ["contextMenus", "tabs", "*://*/*.pgn", "*://*/*.PGN", "*://*/*.Pgn"],

  "minimum_chrome_version": "6.0",

  "update_url": "http://pgn4web.googlecode.com/svn/trunk/chrome-extension/updateInfo.xml",

  "background_page": "background.html"
}

